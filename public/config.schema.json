name: Deploy to ChubAI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  deploy:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v3
    
    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '21.7.1'
        
    - name: Install dependencies
      run: |
        corepack enable
        yarn install
        
    - name: Build stage
      run: yarn build
      
    - name: Deploy to ChubAI
      env:
        CHUB_AUTH_TOKEN: ${{ secrets.CHUB_AUTH_TOKEN }}
      run: |
        # Deployment script will be added by ChubAI template
        echo "Deploying to ChubAI..."
